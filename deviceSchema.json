{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Device Schema",
  "description":"This is the json format for my device inputs",
  "type": "object",
    "properties": {
        "device_id": {
          "type": "integer",
          "minimum": 1,
          "maximum": 9999999999
        },
        "device_type": {
          "enum": ["Temperature", "Blood Pressure", "Pulse", "Oximeter", "Weight", "Glucometer"]
        },
        "target_id": {
          "type": "integer",
          "minimum": 1,
          "maximum": 9999999999
        },
        "value": {"type": "number"},
        "time":
        {
          "type": "object",
          "properties":{
            "year": {
              "type": "integer",
              "minimum": 2022,
              "maximum": 2100
            },
            "month": {
              "type": "integer",
              "minimum": 1,
              "maximum": 12
            },
            "day": {
              "type": "integer",
              "minimum": 1,
              "maximum": 31
            },
            "hour": {
              "type": "integer",
              "minimum": 0,
              "maximum": 24
            },
            "minute": {
              "type": "integer",
              "minimum": 0,
              "maximum": 60
            }
            }
        }
    },
    "required": ["device_id", "device_type","target_id", "value"],
    "additionalProperties": false
}
